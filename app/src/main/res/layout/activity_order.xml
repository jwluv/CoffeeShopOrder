<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/menu1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/orderLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Order No."
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/orderNumber"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonOrderMenuEdit"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_edit" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewMenuList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/orderCofirmLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonOrderPayment"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/button_payment"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonOrderCancel"
            android:layout_width="70dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/button_pay_cancel"
            android:textSize="18sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonOrderCompleted"
            android:layout_width="70dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/button_served"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewOrderedMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

</LinearLayout>
